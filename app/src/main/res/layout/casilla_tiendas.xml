<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contenedor_redondo"
    android:paddingLeft="15dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="3dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_tienda"
            android:text="Nombre de la tienda"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <TextView
            android:id="@+id/valoracion_tienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valoracion"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/marcador_redondo"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imagen_tienda"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/common_google_signin_btn_icon_dark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:id="@+id/descripcion_tienda"
                android:text="Sin descripcion"
                android:textSize="14dp"
                android:capitalize="sentences"
                android:textAlignment="center"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@android:drawable/ic_dialog_email"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:text="correo@electronic.co"
                    android:id="@+id/correo_tienda"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@android:drawable/stat_sys_phone_call"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:text="(+56) 9 12345678"
                    android:id="@+id/telefono_tienda"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>