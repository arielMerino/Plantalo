<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rodrigoayala.listview.Prueba"
    android:weightSum="1"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutFotoPerfil">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imagenCultivo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombreCultivo"
            android:text="Probando nombre"
            android:textColor="#ffffff"
            android:textSize="@dimen/place_autocomplete_progress_size"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/text_comentar"
            android:text="Comentar"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:clickable="true"/>
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/text_tips"
            android:text="Tip"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:clickable="true"/>
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/text_calificar"
            android:text="Calificar"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:clickable="true"/>
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/text_dejar_seguir"
            android:text="PlÃ¡ntalo"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/darker_gray"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listado_mi_cultivo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:dividerHeight="10dp"/>
</LinearLayout>
